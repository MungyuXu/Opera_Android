<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddOperaActivity"
    android:orientation="vertical"
    android:background="@drawable/bj1">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="剧目名"/>
    <EditText
        android:id="@+id/updateOperaName"
        android:layout_width="match_parent"
        android:layout_height="40dp"
       />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="剧目简介"/>
    <EditText
        android:id="@+id/updateOperaInfo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="剧照"/>
    <EditText
        android:id="@+id/updateOperaImg"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        />
    <Button
        android:id="@+id/btn_updateOpera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="修改该剧"
        android:background="@drawable/sz"/>
</LinearLayout>